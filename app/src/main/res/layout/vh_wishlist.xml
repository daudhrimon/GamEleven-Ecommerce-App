<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginVertical="2.5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/wishIv"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="24dp"
        android:paddingHorizontal="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/one" />

    <ImageView
        android:id="@+id/dltBtn"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/selector_wish_dlt"
        android:clickable="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:clickable="false"
        android:src="@drawable/delete" />


    <TextView
        android:id="@+id/wishName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@id/dltBtn"
        android:layout_toEndOf="@id/wishIv"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="2"
        android:text="Power Bank Water Gold"
        android:textColor="@color/cart_wish_tc"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wishCat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/wishName"
        android:layout_toStartOf="@id/dltBtn"
        android:layout_toEndOf="@id/wishIv"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="Sound Box"
        android:textColor="@color/cart_wish_tc"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wishCat"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="5dp"
        android:layout_toEndOf="@id/wishIv"
        android:fontFamily="@font/roboto_med"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="550.00"
        android:textColor="@color/selector_clr"
        android:textSize="14sp" />

</RelativeLayout>