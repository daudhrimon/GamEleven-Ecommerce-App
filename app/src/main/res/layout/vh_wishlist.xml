<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="3dp"
    android:weightSum="10"
    android:paddingStart="11dp">

    <ImageView
        android:id="@+id/wishIv"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:src="@drawable/four" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginStart="11dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/wishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Power Bank Water Gold"
            android:textColor="#7E7E7E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wishCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Sound Box"
            android:textColor="#7E7E7E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="9dp"
            android:fontFamily="@font/roboto_med"
            android:text="500.00 SAR"
            android:textColor="@color/selector_clr"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/selector_wish_dlt"
        android:clickable="true"
        android:gravity="end"
        tools:ignore="SpeakableTextPresentCheck">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="false"
            android:src="@drawable/delete" />

    </LinearLayout>

</LinearLayout>