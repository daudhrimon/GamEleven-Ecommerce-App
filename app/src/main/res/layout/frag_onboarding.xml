<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragOnBoarding">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/onbViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotLay"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/dotLay"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_above="@+id/skipBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/skipBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto_med"
        android:text="SKIP"
        android:textColor="@color/onb_btn_txt_clr"
        android:textSize="17dp" />

    <View
        android:id="@+id/spView"
        android:layout_width="160dp"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/onb_btmview_clr" />

</RelativeLayout>