<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="4.5dp">

    <LinearLayout
        android:id="@+id/bspItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="7"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:clickable="true"
        android:background="@drawable/selector_best_sale_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <ImageView
                android:id="@+id/bspIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/three"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/bspFab">

                <TextView
                    android:id="@+id/bspName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="bottom"
                    android:text="Power Bank Water Gold"
                    android:textColor="#021E65"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bspCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="Sound Box"
                    android:textColor="#021E65"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bspPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/roboto_med"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="550.00"
                    android:textColor="@color/selector_clr"
                    android:textSize="13sp" />

            </LinearLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bspFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:backgroundTint="#F4F4F4"
                android:outlineSpotShadowColor="@color/trans"
                android:src="@drawable/cart_icon"
                app:borderWidth="0dp"
                app:fabCustomSize="30dp"
                app:maxImageSize="22dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>