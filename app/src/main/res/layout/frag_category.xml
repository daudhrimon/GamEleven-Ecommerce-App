<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FragCategory"
    android:background="@color/main_bg_clr">

    <!--TOOLBAR -->

    <androidx.cardview.widget.CardView
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/catBack"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:fontFamily="@font/roboto_med"
                android:textSize="16sp"
                android:textColor="@color/frag_name_clr"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- START FROM HERE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/oneBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/four"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Electronic\nDevice"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/twoBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/one"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Furnitures\nDevice"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/threeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/three"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Casual\nBag"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/fourBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/two"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Electronic\nDevice"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/fiveBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/unnamed"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Electronic\nDevice"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical=".1dp">

                    <LinearLayout
                        android:id="@+id/sixBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:clickable="true"
                        android:background="@drawable/selector_cat_items">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:src="@drawable/unnamed"
                            android:scaleType="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:text="Electronic\nDevice"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="@color/category_tc"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#F8F8F8">

            <LinearLayout
                android:id="@+id/catNameLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/catName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#797979"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/search_bg_clr" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/itemsSuperRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>