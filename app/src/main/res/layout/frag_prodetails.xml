<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Fragment.FragProDetails">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coLay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/main_bg_clr"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSliderPd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingTop="24dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="1000"
                    app:iss_selected_dot="@drawable/dot_selected"
                    app:iss_unselected_dot="@drawable/dot_unselected" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarPd"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">

                    <ImageButton
                        android:id="@+id/proDetailsBack"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_clr"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="SpeakableTextPresentCheck">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/priceLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp">

                    <TextView
                        android:id="@+id/nPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_toStartOf="@id/shareBtn"
                        android:fontFamily="@font/roboto_med"
                        android:text="500.00 SAR"
                        android:textColor="@color/selector_clr"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/shareBtn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/share"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/oPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nPrice"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_med"
                        android:text="46,0000.00 XAF"
                        android:textColor="#CBCBCB"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nPrice"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@id/shareBtn"
                        android:layout_toEndOf="@id/oPrice"
                        android:fontFamily="@font/roboto_med"
                        android:text="-46%"
                        android:textColor="#868686"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cmnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oPrice"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toStartOf="@id/shareBtn"
                        android:text="@string/pdText1"
                        android:textColor="#707070"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ratingLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cmnt"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Yellow.Small.AppCompatRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:numStars="5"
                            android:rating="4.6"
                            android:stepSize="1"
                            android:theme="@style/Yellow.Small.AppCompatRatingBar"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/roboto_med"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="4.6"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/voucherCard"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_below="@id/ratingLay"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="22dp"
                            android:src="@drawable/voucher" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/priceLay"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/desBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/selector_clr"
                            android:clickable="true"
                            android:gravity="center"
                            tools:ignore="TouchTargetSizeCheck">

                            <TextView
                                android:id="@+id/desTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:text="Description"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/specBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:clickable="true"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/specTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:text="Specifications"
                                android:textColor="@color/pd_btn_clr"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/detailsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- RecyclerView Need -->

                        <LinearLayout
                            android:id="@+id/desLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_light"
                                android:text="@string/descriptionText"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_light"
                                android:text="@string/descriptionText"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <!-- RecyclerView Need -->

                        <LinearLayout
                            android:id="@+id/specLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_light"
                                android:text="@string/pdText1"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_light"
                                android:text="@string/pdText1"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/relaProLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailsCard"
                    android:padding="4.5dp">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_med"
                        android:text="Related Products"
                        android:textColor="@color/rating_txt_clr"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="View All"
                        android:textColor="@color/rating_txt_clr"
                        android:textSize="13sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/relatedPR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header"
                        android:layout_marginVertical="8dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        tools:itemCount="8"
                        tools:listitem="@layout/vh_productads" />

                </RelativeLayout>

                <!-- RATING CARD START -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relaProLay"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_med"
                            android:text="Reviews &amp; Ratings"
                            android:textColor="@color/rating_txt_clr"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_med"
                                    android:text="0"
                                    android:textColor="@color/rating_txt_clr"
                                    android:textSize="40sp" />

                                <androidx.appcompat.widget.AppCompatRatingBar
                                    style="@style/Yellow.Small.AppCompatRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:numStars="5"
                                    android:rating="0.0"
                                    android:stepSize="1"
                                    android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_med"
                                    android:text="0"
                                    android:textColor="@color/rating_txt_clr"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="120dp"
                                android:layout_margin="10dp"
                                android:background="#AA9D9D" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:numStars="5"
                                        android:rating="5.0"
                                        android:stepSize="1"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_med"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="5(10)"
                                        android:textColor="@color/rating_txt_clr2"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:numStars="5"
                                        android:rating="4.0"
                                        android:stepSize="1"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_med"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="4(5)"
                                        android:textColor="@color/rating_txt_clr2"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:numStars="5"
                                        android:rating="3.0"
                                        android:stepSize="1"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_med"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="3(1)"
                                        android:textColor="@color/rating_txt_clr2"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:numStars="5"
                                        android:rating="2.0"
                                        android:stepSize="0.5"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_med"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="2(1)"
                                        android:textColor="@color/rating_txt_clr2"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:numStars="5"
                                        android:rating="1.0"
                                        android:stepSize="1"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_med"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="1(1)"
                                        android:textColor="@color/rating_txt_clr2"
                                        android:textSize="16sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#AA9D9D" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/roboto_med"
                            android:text="View all or write a review"
                            android:textAlignment="center"
                            android:textColor="@color/selector_clr"
                            android:textSize="13sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".81"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:weightSum="13">

            <ImageButton
                android:id="@+id/addWishBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/heart"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- add to cart button -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="5"
                android:background="@drawable/selector_mycart"
                android:clickable="true"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="TouchTargetSizeCheck">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_med"
                        android:paddingVertical="9dp"
                        android:text="My Cart"
                        android:textColor="@color/selector_clr"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:background="@drawable/shape_addtocart"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_med"
                        android:text="0"
                        android:textColor="@color/rating_txt_clr"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="6"
                android:background="@drawable/selector_buynow"
                android:clickable="true"
                android:gravity="center"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_med"
                    android:paddingVertical="9dp"
                    android:text="Buy Now"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>