<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="3dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/cartIv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/one" />

    <LinearLayout
        android:id="@+id/selectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cartCat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/selector_clr"
            android:outlineSpotShadowColor="@color/trans"
            android:src="@drawable/tick"
            app:borderWidth="0dp"
            app:fabCustomSize="22dp"
            app:maxImageSize="12dp"
            app:tint="@color/white"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabUnselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart_unselected"
            app:tint="@color/trans"
            android:backgroundTint="#EAEAEA"
            app:fabCustomSize="22dp"
            app:borderWidth="0dp"
            app:maxImageSize="22dp"
            android:outlineSpotShadowColor="@color/trans"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/cartCat"
        android:layout_toStartOf="@id/selectBtn"
        android:layout_toEndOf="@id/cartIv"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="2"
        android:text="Power Bank Water Gold"
        android:textColor="@color/frag_name_clr"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cartCat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/cartId"
        android:layout_toStartOf="@id/selectBtn"
        android:layout_toEndOf="@id/cartIv"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="Sound Box"
        android:textColor="@color/frag_name_clr"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cartId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/cartPrice"
        android:layout_toStartOf="@id/selectBtn"
        android:layout_toEndOf="@id/cartIv"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="12345"
        android:textColor="@color/frag_name_clr"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@id/cartCounter"
        android:layout_toEndOf="@id/cartIv"
        android:fontFamily="@font/roboto_med"
        android:maxLines="1"
        android:text="550.00"
        android:textColor="@color/selector_clr"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cartCounter"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageButton
            android:id="@+id/cartPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F0F0F0"
            android:src="@drawable/plus"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/cartCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_med"
            android:text="00"
            android:textAlignment="center"
            android:textColor="#837A7A"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/cartMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F0F0F0"
            android:src="@drawable/minus"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

</RelativeLayout>
