        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="3dp"
            android:text="Order Summary"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
